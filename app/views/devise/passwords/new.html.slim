        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, :html => { :class => "form-horizontal" }) do |f|
          = devise_error_messages!
          .form-group
            = f.label :email, t("authentication.email"), :class => "col-md-3 control-label"
            .col-md-9
              = f.email_field :email, autofocus: true, :class => "form-control"
